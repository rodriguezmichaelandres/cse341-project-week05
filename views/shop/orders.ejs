<%- include('../includesProve/head.ejs') %>
</head>
<body>
    <%- include('../includesProve/nav.ejs') %>
    <main>
        <% if (orders.length <= 0) { %>
        <h1>
            Nothing there!
        </h1>
        <% } else { %>
            <ul>
                <% orders.forEach(order => { %>
                    <li>
                        <h1>Order #<%= order._id %></h1>
                        <ul>
                            <% order.products.forEach(p => { %>
                            <li>
                                <%= p.product.tittle %> (<%= p.quantity %>)
                            </li>
                            <% }); %>
                        </ul>
                    </li>
                <% }) %>
            </ul>
        <% } %> 
    </main>
    <%- include('../includesProve/end.ejs') %>